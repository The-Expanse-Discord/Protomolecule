{
	"compilerOptions": {
		"target": "es2020",
		"lib": [ "es2020" ],
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./dist",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	},
	"include": [ "./src/**/*" ],
	"exclude": [ "./dist/**/*", "./node_modules/**/*" ]
}
