{
	"compilerOptions": {
		"target": "es2020",
		"lib": [ "es2020" ],
		"module": "commonjs",
		"rootDir": "./src",
		"outDir": "./bin",
		"declaration": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"removeComments": false,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true
	},
	"include": [ "./src/**/*" ],
	"exclude": [ "./bin/**/*", "./node_modules/**/*" ],
    "typedocOptions": {
		"mode": "file",
		"out": "docs",
		"exclude": [ "node_modules/**/*" ],
		"excludeExternals": true,
		"stripInternal": true,
		"name": "Project RUBICON",
		"includeVersion": true,
		"theme": "minimal",
		"toc": [
			"Agent",
			"Command",
			"Player",
			"Weapon"
		],
		"categoryOrder": [
			"Commands: Game Data",
			"Commands: System",
			"Player Data",
			"Game Data",
			"*"
		],
		"hideGenerator": true
    }
}
